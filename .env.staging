# =================================================
# APP
# =================================================
NODE_ENV=staging
PROJECT_NAME=TraTimNha (Staging)
PORT=3000

# =================================================
# DATABASE
# =================================================
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=saigon_staging_user
DATABASE_PASS=strong_staging_password
DATABASE_NAME=saigon_staging_db

DATABASE_MAX_POOL=10
DATABASE_MIN_POOL=2
DATABASE_SSL=false

# =================================================
# AUTH / JWT
# =================================================
JWT_ACCESS_TOKEN_SECRET=STAGING_ACCESS_SECRET_CHANGE_ME
JWT_ACCESS_TOKEN_EXPIRATION_TIME=15m

JWT_REFRESH_TOKEN_SECRET=STAGING_REFRESH_SECRET_CHANGE_ME
JWT_REFRESH_TOKEN_EXPIRATION_TIME=7d

# =================================================
# COOKIE (LOCAL STAGING)
# =================================================
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
COOKIE_DOMAIN=.staging.tratimnha.local

# =================================================
# SECURITY
# =================================================
THROTTLE_TTL=60
THROTTLE_LIMIT=50

# =================================================
# FRONTEND URL (CORS)
# =================================================
FRONTEND_CUSTOMER_URL=http://staging.tratimnha.local
FRONTEND_ADMIN_URL=http://admin.staging.tratimnha.local
